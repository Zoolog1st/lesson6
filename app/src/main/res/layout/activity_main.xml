<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="36sp" android:id="@+id/categoryTextView" android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:textColor="#000000" android:fontFamily="monospace" android:textStyle="bold"/>
    <ListView
            android:layout_width="365dp"
            android:layout_height="486dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/categoryTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/categoryListView"
            app:layout_constraintHorizontal_bias="0.266" app:layout_constraintVertical_bias="0.05"
            android:divider="@null"/>

</android.support.constraint.ConstraintLayout>